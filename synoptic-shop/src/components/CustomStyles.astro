---
import '@fontsource-variable/inter';
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    /* Synoptic Brand Colors */
    --aw-color-primary: rgb(51 73 152);        /* Dark Synoptic Blue */
    --aw-color-secondary: rgb(58 193 209);     /* Light Synoptic Blue */
    --aw-color-accent: rgb(51 73 152);         /* Same as primary for consistency */

    /* Text Colors */
    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    
    /* Background Colors */
    --aw-color-bg-page: rgb(255 255 255);
    --aw-color-hero-bg: rgb(223 225 229);      /* Light gray for hero section */

    --aw-color-bg-page-dark: rgb(3 6 32);

    ::selection {
      background-color: rgb(58 193 209 / 20%); /* Light synoptic blue with transparency */
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    /* Synoptic Brand Colors for Dark Mode */
    --aw-color-primary: rgb(58 193 209);       /* Light Synoptic Blue for dark mode */
    --aw-color-secondary: rgb(51 73 152);      /* Dark Synoptic Blue */
    --aw-color-accent: rgb(58 193 209);        /* Light blue for dark mode */

    /* Dark Mode Text Colors */
    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: rgb(3 6 32);
    --aw-color-hero-bg: rgb(51 73 152);        /* Dark synoptic blue for hero in dark mode */

    ::selection {
      background-color: rgb(51 73 152);
      color: snow;
    }
  }

  /* Custom hero section background */
  .hero-bg {
    background-color: var(--aw-color-hero-bg);
  }

  /* Ensure buttons use the correct Synoptic colors */
  .btn-primary {
    background-color: var(--aw-color-primary);
    border-color: var(--aw-color-primary);
  }

  .btn-primary:hover {
    background-color: var(--aw-color-secondary);
    border-color: var(--aw-color-secondary);
  }
</style>