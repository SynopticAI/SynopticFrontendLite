import Layout from '~/layouts/PageLayout.astro';
import davidAndJoshua from '~/assets/images/davidAndJoshua.png';

const metadata = {
  title: 'About us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About us"
    image={{
      src: davidAndJoshua,
      alt: 'Synoptic Vision',
    }}
  >
    <Fragment slot="title">
      Combining technical expertise with <br />
      <span class="text-accent dark:text-white">industry experience</span>
    </Fragment>

    <Fragment slot="subtitle">
      Founded by two visionary engineers who discovered their passion for computer vision and machine learning through academic work. We excel at bridging the gap between cutting-edge research and transformative industrial applications.
    </Fragment>
  </Hero>

  <!-- Team Introduction Section -->
  <Features3
    title="Our Team"
    subtitle="Two exceptional engineers with complementary expertise, united by a shared vision for revolutionizing computer vision technology."
    columns={2}
    items={[
            {
        title: 'David',
        description: 'Combines academic excellence with over 10 years of outstanding industry experience. As a successful business leader, he provides invaluable real-world insights and practical application expertise.',
        icon: 'tabler:briefcase',
      },
      {
        title: 'Joshua',
        description: 'Brings extensive programming know-how and cutting-edge expertise in Machine Learning, AI, and Computer Vision. His technical mastery spans multiple programming languages and deep understanding of complex algorithms.',
        icon: 'tabler:code',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features3>

  <!-- Our Genesis Section -->
  <Features3
    title="Our Journey"
    subtitle="From groundbreaking academic research to transformative innovation - how we discovered our passion for pioneering computer vision technology."
    columns={2}
    items={[
      {
        title: 'Academic Excellence',
        description: 'Both founders entered this field through rigorous academic work, developing an exceptional understanding of the theoretical foundations that drive modern computer vision and machine learning breakthroughs.',
        icon: 'tabler:school',
      },
      {
        title: 'Transformative Application',
        description: 'Masterfully combining Joshua\'s advanced computer science and machine learning expertise with David\'s extensive industry leadership, we excel at translating complex algorithms into revolutionary real-world solutions.',
        icon: 'tabler:tools',
      },
    ]}
  />

  <!-- Our Values Section -->
  <Steps2
    title="Our Values"
    subtitle="The unwavering principles that drive our excellence in developing world-class computer vision solutions and forging exceptional partnerships with our clients."
    items={[
      {
        title: 'Customer-centric Excellence',
        description:
          'We pride ourselves on deeply understanding our clients\' unique challenges and delivering tailored computer vision solutions that exceed expectations, ensuring maximum value and transformative results.',
      },
      {
        title: 'Relentless Innovation',
        description:
          'We maintain our position at the forefront of machine learning and computer vision research, continuously advancing our algorithms and methodologies to deliver increasingly sophisticated and groundbreaking solutions.',
      },
      {
        title: 'Ethical Leadership',
        description:
          'We champion responsible AI development, creating solutions that uphold the highest standards of privacy, fairness, and transparency in our automated visual inspection and analysis systems.',
      },
    ]}
  />

